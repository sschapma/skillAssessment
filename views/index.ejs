<!-- REQUIRED JS SCRIPTS -->

<!-- jQuery 2.2.0 -->
<script src="plugins/jQuery/jQuery-2.2.0.min.js"></script>
<!-- Bootstrap 3.3.6 -->
<script src="bootstrap/js/bootstrap.min.js"></script>
<!-- AdminLTE App -->
<script src="dist/js/app.min.js"></script>

<!-- Optionally, you can add Slimscroll and FastClick plugins.
     Both of these plugins are recommended to enhance the
     user experience. Slimscroll is required when using the
     fixed layout. -->
     <script type="text/ng-template" id="/home.html">
       <div ng-repeat="post in posts">
         <span style="font-size:20px;">
           <div ng-show="post.isPost" style="margin-bottom:5px; padding: 10px 10px; border:1px solid gray; border-radius:2px; background-color:#FEFEFE;">
             <a href="#/posts/{{post._id}}"><strong>{{post.title}}</strong></a>
         </span>
         <span ng-show="post.author" style="float:right;">
           <h6>posted by <span class="text-capitalize">{{post.author}}<span></h6>
         </span>
         </div>
       </div>

       <form ng-submit="addPost()"
         style="margin-top:30px;" ng-show="isLoggedIn()">
         <h3>Add a new post</h3>

         <div class="form-group">
           <input type="text"
           class="form-control"
           placeholder="Title"
           ng-model="title"></input>
         </div>
         <div class="form-group">
           <textarea type="text"
           class="form-control"
           ng-model="body"
           placeholder="Body"></textarea>
         </div>
         <button type="submit" class="btn btn-primary">Post</button>
       </form>

       <div ng-hide="isLoggedIn()">
         <h4>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a post.</h4>
       </div>
     </script>

     <script type="text/ng-template" id="/posts.html">
       <div>
         <h1>
           <span ng-show="post.title">
             <strong>{{post.title}}</strong>
           </span>
         </h1>
       </div>

       <div class="page-header">
           <span ng-show="post.body">
             <i>{{post.body}}</i>
           </span>
           <span ng-show="post.author" style="font-size:10px; float:right;">
             posted by <span class="text-capitalize">{{post.author}}</span>
       </div>

       <div ng-repeat="comment in post.comments" style="border:1px solid gray; border-radius:5px; background-color: white; padding:0 5px 0 5px; margin-top:5px;">
         <h4>
           {{comment.body}}
         </h4>
         <span ng-show="comment.author" style="font-size:10px; float:right;">
           posted by <span class="text-capitalize">{{comment.author}}</span>
         </span><br>
       </div>
       <form ng-submit="addComment()"
         style="margin-top:30px;" ng-show="isLoggedIn()">
         <h3>Add a new comment</h3>

         <div class="form-group">
           <textarea
           class="form-control"
           placeholder="Comment"
           ng-model="body"></textarea>
         </div>
         <button type="submit" class="btn btn-primary">Post</button>
       </form>

       <div ng-hide="isLoggedIn()">
         <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
       </div>
     </script>

     <script type="text/ng-template" id="/login.html">

       <div ng-show="error" class="alert alert-danger row">
         <span>{{ error.message }}</span>
       </div>

       <form ng-submit="logIn()"
         style="margin-top:30px;">
         <h3>Log In</h3>

         <div class="form-group">
           <input type="text"
           class="form-control"
           placeholder="Username"
           ng-model="user.username"
           style="width:30%;"></input>
         </div>
         <div class="form-group">
           <input type="password"
           class="form-control"
           placeholder="Password"
           ng-model="user.password"
           style="width:30%;"></input>
         </div>
         <button type="submit" class="btn btn-primary">Log In</button>
       </form>
     </script>

     <script type="text/ng-template" id="/register.html">

       <div ng-show="error" class="alert alert-danger row">
         <span>{{ error.message }}</span>
       </div>

       <form ng-submit="register()"
         style="margin-top:30px;">
         <h3>Register</h3>

         <div class="form-group">
           <input type="text"
           class="form-control"
           placeholder="Username"
           ng-model="user.username"
           style="width:30%;"></input>
         </div>
         <div class="form-group">
           <input type="password"
           class="form-control"
           placeholder="Password"
           ng-model="user.password"
           style="width:30%;"></input>
         </div>
         <button type="submit" class="btn btn-primary">Register</button>
       </form>
     </script>

</body>
</html>
